# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{adoc,yml}]
indent_size = 2
indent_style = space

[*.{diff,patch}]
end_of_line =
indent_style =
insert_final_newline = false
trim_trailing_whitespace = false
